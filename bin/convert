#!/usr/bin/env node

'use strict';

const convert = require('@yr/graphics-component/bin/convert');
const primitives = require('../src/js/lib/primitives');
const recipes = require('../src/js/lib/recipes');
const utils = require('../src/js/lib/utils');

const dir = process.argv[2];
const graphics = [];

for (const id in recipes) {
  const recipe = recipes[id];
  let styles = [];
  let symbols = [];
  let uses = [];

  recipe.forEach((recipe) => {
    const opts = utils.parse(recipe);
    const attrs = primitives[opts.primitive](opts).attributes;
    let symbol = opts.primitive;

    if (opts.winter) symbol += 'Winter';

    styles.push(opts.class);
    symbols.push(symbol);
    uses.push(`<use xlink:href="${attrs['xlink:href']}" class="${attrs.className}" x="0" y="0" width="100" height="100" transform="${attrs.transform}"></use>`);
  });

  graphics.push({ id, styles, symbols, uses });
}

convert.run(dir, graphics, [30, 38, 48, 100, 200]);